<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Questions</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Prompt&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Prompt', sans-serif;
        }
    </style>
</head>
<body class="bg-light">

<div class="container mt-5">
    <h1 class="mb-4 text-primary">Questions</h1>

    <% questions.forEach((q) => { %>
        <div class="card mb-4 shadow-sm">
            <div class="card-body">
                <h5 class="card-title">
                    <%= q.QID %>. <%= q.Stem %>
                </h5>

                <div class="form-check">
                    <input class="form-check-input" type="radio" name="question_<%= q.QID %>">
                    <label class="form-check-label"><%= q.Alt_A %></label>
                </div>

                <div class="form-check">
                    <input class="form-check-input" type="radio" name="question_<%= q.QID %>">
                    <label class="form-check-label"><%= q.Alt_B %></label>
                </div>

                <div class="form-check">
                    <input class="form-check-input" type="radio" name="question_<%= q.QID %>">
                    <label class="form-check-label"><%= q.Alt_C %></label>
                </div>

                <div class="form-check">
                    <input class="form-check-input" type="radio" name="question_<%= q.QID %>">
                    <label class="form-check-label"><%= q.Alt_D %></label>
                </div>

                <p class="mt-3 text-success">
                    Correct Answer: <%= q.Correct %>
                </p>

            </div>
        </div>
    <% }) %>
</div>

</body>
</html>
